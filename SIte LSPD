          <h2 className="text-2xl font-semibold">Espace Administration</h2>
          <div className="flex flex-col gap-2">
            <label>Matricule du responsable :</label>
            <Input
              placeholder="Entrez le matricule"
              value={matricule}
              onChange={(e) => setMatricule(e.target.value)}
            />
          </div>

          <div className="flex flex-col gap-2">
            <label>Ã‰tat du DEFCON :</label>
            <Select onValueChange={(v) => setDefcon(v)} defaultValue="5">
              <SelectTrigger>
                <SelectValue />
              </SelectTrigger>
              <SelectContent>
                <SelectItem value="1">DEFCON 1</SelectItem>
                <SelectItem value="2">DEFCON 2</SelectItem>
                <SelectItem value="3">DEFCON 3</SelectItem>
                <SelectItem value="4">DEFCON 4</SelectItem>
                <SelectItem value="5">DEFCON 5</SelectItem>
              </SelectContent>
            </Select>
          </div>
        </CardContent>
      </Card>

      {/* Zone publique */}
      <Card className="p-4 max-w-2xl mx-auto">
        <CardContent className="flex flex-col gap-4">
          <h2 className="text-2xl font-semibold">Informations Publiques</h2>
          <p className="text-lg">DEFCON actuel : <span className="font-bold">{defcon}</span></p>
          <p className="text-lg">Responsable en service : <span className="font-bold">{matricule || "Aucun"}</span></p>
        </CardContent>
      </Card>

