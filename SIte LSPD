  <script>
    // Replace placeholders automatically if provided via URL params (handy for publishing)
    (function(){
      function q(name){const url = new URL(window.location.href);return url.searchParams.get(name)}
      const logo = q('logo') || '';
      const form = q('form') || '';
      const email = q('email') || '';
      if(logo) document.querySelector('.logo img').src = logo;
      if(form) document.getElementById('open-form').href = form;
      if(email){document.getElementById('email-placeholder').textContent = email;document.getElementById('contact-email').textContent = email}
    })();

    // Simple contact form handler (client-side): show message and instructions to admin.
    document.getElementById('contact-form').addEventListener('submit', function(e){
      e.preventDefault();
      const name = document.getElementById('name').value;
      const email = document.getElementById('email').value;
      const msg = document.getElementById('msg').value;
      const result = document.getElementById('form-result');
      // NOTE: this demo does not send emails. Replace with real endpoint or use form provider.
      result.style.display = 'block';
      result.textContent = 'Merci ' + name + " ‚Äî ton message a √©t√© re√ßu localement. Remplacez le handler de ce formulaire par un Google Form, Formspree ou votre back-end pour l'envoyer r√©ellement.";
      this.reset();
    });
